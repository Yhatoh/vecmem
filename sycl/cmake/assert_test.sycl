// SYCL include(s).
#include <CL/sycl.hpp>

// System include(s).
#include <cassert>

int main() {

    // Run a useless little kernel that requires assert(...) to be available.
    cl::sycl::queue queue;
    int i = 20;
    (void)i;
    queue.submit([&](cl::sycl::handler& h) {
        h.parallel_for<class test_kernel>(
            cl::sycl::range<1>(100), [=](cl::sycl::id<1>) { assert(i == 20); });
    });

    // Return gracefully.
    return 0;
}
